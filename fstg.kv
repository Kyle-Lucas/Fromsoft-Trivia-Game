#:kivy 2.3.0

<FloatLayout>:

FloatLayout:

    Label: # The Question
        halign: 'center'
        text: app.Questions[2]
        size_hint: .8,.1
        pos_hint: {'center_x': .5, 'top': .7}

    GridLayout: # The Options to choose from
        cols:1
        size_hint: .8,.4
        spacing: 20
        pos_hint: {'center_x': .5, 'top': .5}

        Button:
            id: A
            text: app.Answers2[0]
            on_release: app.CheckAns(self)
        Button:
            id: B
            text: app.Answers2[1]
            on_release: app.CheckAns(self)
        Button:
            id: C
            text: app.Answers2[2]
            on_release: app.CheckAns(self)
        Button:
            id: D
            text: app.Answers2[3]
            on_release: app.CheckAns(self)