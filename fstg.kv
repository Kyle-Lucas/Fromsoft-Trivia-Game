#:kivy 2.3.0

<FloatLayout>:

FloatLayout:

    Button:
        text: "Start"
        on_release: app.LoadQue()
        size_hint: .8,.1
        pos_hint: {'center_x': .5, 'top': 1}

    Label: # The Question
        id: que
        halign: 'center'
        text: 'N/A'
        text_size: self.width, None
        size_hint: .8,.1
        pos_hint: {'center_x': .5, 'top': .7}

    GridLayout: # The Options to choose from
        cols:1
        size_hint: .8,.4
        spacing: 20
        pos_hint: {'center_x': .5, 'top': .5}

        Button:
            id: opt0
            text: 'N/A'
            on_release: app.CheckAns(self)
        Button:
            id: opt1
            text: 'N/A'
            on_release: app.CheckAns(self)
        Button:
            id: opt2
            text: 'N/A'
            on_release: app.CheckAns(self)
        Button:
            id: opt3
            text: 'N/A'
            on_release: app.CheckAns(self)